<Project Sdk="Microsoft.Build.NoTargets/3.5.6">
    <Import Project="..\..\openjdk.props" />

    <PropertyGroup>
        <TargetFrameworks>net461;netcoreapp3.1</TargetFrameworks>
        <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <Description>IKVM Runtime Image</Description>
        <NoWarn>NU5118</NoWarn>
    </PropertyGroup>

    <PropertyGroup>
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>
    </PropertyGroup>

    <ItemGroup>
        <None Include="buildTransitive\**\*">
            <Pack>true</Pack>
            <PackagePath>buildTransitive\%(RecursiveDir)%(Filename)%(Extension)</PackagePath>
        </None>
        <None Include="README.md;..\..\LICENSE.md">
            <Pack>true</Pack>
            <PackagePath>.</PackagePath>
        </None>
        
        <!-- files directly part of this project -->
        <None Include="content\any\**\*">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
            <TargetPath>%(RecursiveDir)%(Filename)%(Extension)</TargetPath>
            <Pack>true</Pack>
            <PackagePath>content\any\%(RecursiveDir)%(Filename)%(Extension)</PackagePath>
        </None>
        
        <!-- solution level files -->
        <None Include="..\..\README.md;..\..\LICENSE.md;..\..\THIRD_PARTY_README;..\..\TRADEMARK">
            <Link>content\any\ikvm\%(RecursiveDir)%(Filename)%(Extension)</Link>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
            <TargetPath>ikvm\%(RecursiveDir)%(Filename)%(Extension)</TargetPath>
            <Pack>true</Pack>
            <PackagePath>content\any\ikvm</PackagePath>
        </None>
        
        <!-- openjdk contents -->
        <None Include="@(OpenJdkImageContent)" Link="">
            <Link>content\any\ikvm\%(ImagePath)</Link>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
            <TargetPath>ikvm\%(ImagePath)</TargetPath>
            <Pack>true</Pack>
            <PackagePath>$([System.IO.Path]::GetDirectoryName('content\any\ikvm\%(ImagePath)'))</PackagePath>
        </None>
    </ItemGroup>

</Project>
