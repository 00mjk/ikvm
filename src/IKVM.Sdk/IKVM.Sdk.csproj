<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net472;netcoreapp3.1</TargetFrameworks>
        <BuildOutputTargetFolder>tasks</BuildOutputTargetFolder>
        <TargetsForTfmSpecificBuildOutput>$(TargetsForTfmSpecificBuildOutput);CopyProjectReferencesToPackage;CopyPackageReferencesToPackage</TargetsForTfmSpecificBuildOutput>
        <NoWarn>NU5100;NU5128</NoWarn>
    </PropertyGroup>

    <ItemGroup>
        <InternalsVisibleTo Include="IKVM.Sdk.Tests" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="lib\**\*" PackagePath="lib\%(RecursiveDir)%(Filename)%(Extension)" />
        <Content Include="buildTransitive\**\*" PackagePath="buildTransitive\%(RecursiveDir)%(Filename)%(Extension)" />
    </ItemGroup>

    <ItemGroup>
        <Reference Remove="@(Reference)" />
        <PackageReference Remove="@(PackageReference)" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="CliWrap" Version="3.4.4" PrivateAssets="all" />
        <PackageReference Include="Microsoft.Build" Version="16.9.0" PrivateAssets="all" />
        <PackageReference Include="Microsoft.Build.Framework" Version="17.2.0" PrivateAssets="all" />
        <PackageReference Include="Microsoft.Build.Tasks.Core" Version="16.9.0" PrivateAssets="all" />
        <PackageReference Include="Microsoft.Build.Utilities.Core" Version="17.2.0" PrivateAssets="all" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\IKVM-pkg\IKVM-pkg.csproj" />
        <ProjectReference Include="..\IKVM.Util\IKVM.Util.csproj" PrivateAssets="all" />
    </ItemGroup>

    <ItemGroup>
        <PublishProjectReference Include="..\ikvm\ikvm.csproj" Condition=" '$(TargetFramework)' == '' ">
            <SetTargetFramework>TargetFramework=net461</SetTargetFramework>
            <PublishPackagePath>tools\net461</PublishPackagePath>
            <PublishProperties>SelfContained=false</PublishProperties>
        </PublishProjectReference>
        <PublishProjectReference Include="..\ikvmc\ikvmc.csproj" Condition=" '$(TargetFramework)' == '' ">
            <SetTargetFramework>TargetFramework=net461</SetTargetFramework>
            <PublishPackagePath>tools\net461</PublishPackagePath>
            <PublishProperties>SelfContained=false</PublishProperties>
        </PublishProjectReference>
        <PublishProjectReference Include="..\ikvmstub\ikvmstub.csproj" Condition=" '$(TargetFramework)' == '' ">
            <SetTargetFramework>TargetFramework=net461</SetTargetFramework>
            <PublishPackagePath>tools\net461</PublishPackagePath>
            <PublishProperties>SelfContained=false</PublishProperties>
        </PublishProjectReference>
        <PublishProjectReference Include="..\ikvm\ikvm.csproj" Condition=" '$(TargetFramework)' == '' ">
            <SetTargetFramework>TargetFramework=netcoreapp3.1</SetTargetFramework>
            <PublishPackagePath>tools\netcoreapp3.1</PublishPackagePath>
            <PublishProperties>SelfContained=false</PublishProperties>
        </PublishProjectReference>
        <PublishProjectReference Include="..\ikvmc\ikvmc.csproj" Condition=" '$(TargetFramework)' == '' ">
            <SetTargetFramework>TargetFramework=netcoreapp3.1</SetTargetFramework>
            <PublishPackagePath>tools\netcoreapp3.1</PublishPackagePath>
            <PublishProperties>SelfContained=false</PublishProperties>
        </PublishProjectReference>
        <PublishProjectReference Include="..\ikvmstub\ikvmstub.csproj" Condition=" '$(TargetFramework)' == '' ">
            <SetTargetFramework>TargetFramework=netcoreapp3.1</SetTargetFramework>
            <PublishPackagePath>tools\netcoreapp3.1</PublishPackagePath>
            <PublishProperties>SelfContained=false</PublishProperties>
        </PublishProjectReference>
    </ItemGroup>

    <Target DependsOnTargets="ResolveReferences" Name="CopyProjectReferencesToPackage">
        <ItemGroup>
            <BuildOutputInPackage Include="@(ReferenceCopyLocalPaths-&gt;WithMetadataValue('ReferenceSourceTarget', 'ProjectReference'))" />
        </ItemGroup>
    </Target>

    <Target DependsOnTargets="ResolveReferences;ResolvePackageAssets" Name="CopyPackageReferencesToPackage">
        <PropertyGroup>
            <CopyLocalPackageReferences Condition="'%(RuntimeCopyLocalItems.CopyLocal)' == 'true'">;@(PackageReference);</CopyLocalPackageReferences>
        </PropertyGroup>
        <ItemGroup>
            <BuildOutputInPackage Include="@(RuntimeCopyLocalItems)" Condition="$(CopyLocalPackageReferences.Contains(';%(RuntimeCopyLocalItems.NuGetPackageId);'))" />
        </ItemGroup>
    </Target>

</Project>
