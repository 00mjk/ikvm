<Project>
    <Import Project="Sdk.props" Sdk="Microsoft.NET.Sdk" />

    <PropertyGroup>
        <PackageId>IKVM.Sdk</PackageId>
        <TargetFrameworks>net461;netcoreapp3.1</TargetFrameworks>
        <NoWarn>$(NoWarn);NU5100;NU5128</NoWarn>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <Description>Java SE 8 Virtual Machine for .NET (SDK)</Description>
    </PropertyGroup>

    <ItemGroup>
        <InternalsVisibleTo Include="IKVM.Sdk.Tests" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="lib\**\*" PackagePath="lib\%(RecursiveDir)%(Filename)%(Extension)" />
        <Content Include="buildTransitive\**\*" PackagePath="buildTransitive\%(RecursiveDir)%(Filename)%(Extension)" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\..\LICENSE.md" Pack="true" PackagePath="." />
        <None Include="README.md" Pack="true" PackagePath="." />
    </ItemGroup>

    <ItemGroup>
        <Reference Remove="@(Reference)" />
        <PackageReference Remove="@(PackageReference)" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\IKVM-pkg\IKVM-pkg.csproj" />
    </ItemGroup>

    <ItemGroup>
        <PublishProjectReference Include="..\IKVM.Sdk.Tasks\IKVM.Sdk.Tasks.csproj" Condition=" '$(TargetFramework)' == '' ">
            <SetTargetFramework>TargetFramework=net472</SetTargetFramework>
            <PublishPackagePath>tasks\net472</PublishPackagePath>
            <PublishProperties>SelfContained=false</PublishProperties>
        </PublishProjectReference>
        <PublishProjectReference Include="..\IKVM.Sdk.Tasks\IKVM.Sdk.Tasks.csproj" Condition=" '$(TargetFramework)' == '' ">
            <SetTargetFramework>TargetFramework=net6.0</SetTargetFramework>
            <PublishPackagePath>tasks\net6.0</PublishPackagePath>
            <PublishProperties>SelfContained=false</PublishProperties>
        </PublishProjectReference>
        <PublishProjectReference Include="..\ikvm\ikvm.csproj" Condition=" '$(TargetFramework)' == '' ">
            <SetTargetFramework>TargetFramework=net461</SetTargetFramework>
            <PublishPackagePath>tools\net461</PublishPackagePath>
            <PublishProperties>SelfContained=false</PublishProperties>
        </PublishProjectReference>
        <PublishProjectReference Include="..\ikvmc\ikvmc.csproj" Condition=" '$(TargetFramework)' == '' ">
            <SetTargetFramework>TargetFramework=net461</SetTargetFramework>
            <PublishPackagePath>tools\net461</PublishPackagePath>
            <PublishProperties>SelfContained=false</PublishProperties>
        </PublishProjectReference>
        <PublishProjectReference Include="..\ikvmstub\ikvmstub.csproj" Condition=" '$(TargetFramework)' == '' ">
            <SetTargetFramework>TargetFramework=net461</SetTargetFramework>
            <PublishPackagePath>tools\net461</PublishPackagePath>
            <PublishProperties>SelfContained=false</PublishProperties>
        </PublishProjectReference>
        <PublishProjectReference Include="..\ikvm\ikvm.csproj" Condition=" '$(TargetFramework)' == '' ">
            <SetTargetFramework>TargetFramework=netcoreapp3.1</SetTargetFramework>
            <PublishPackagePath>tools\netcoreapp3.1</PublishPackagePath>
            <PublishProperties>SelfContained=false</PublishProperties>
        </PublishProjectReference>
        <PublishProjectReference Include="..\ikvmc\ikvmc.csproj" Condition=" '$(TargetFramework)' == '' ">
            <SetTargetFramework>TargetFramework=netcoreapp3.1</SetTargetFramework>
            <PublishPackagePath>tools\netcoreapp3.1</PublishPackagePath>
            <PublishProperties>SelfContained=false</PublishProperties>
        </PublishProjectReference>
        <PublishProjectReference Include="..\ikvmstub\ikvmstub.csproj" Condition=" '$(TargetFramework)' == '' ">
            <SetTargetFramework>TargetFramework=netcoreapp3.1</SetTargetFramework>
            <PublishPackagePath>tools\netcoreapp3.1</PublishPackagePath>
            <PublishProperties>SelfContained=false</PublishProperties>
        </PublishProjectReference>
    </ItemGroup>
    
    <Import Project="Sdk.targets" Sdk="Microsoft.NET.Sdk" />

    <Target Name="MakeIkvmSdkVersionFile" Outputs="$(IntermediateOutputPath)VERSION" BeforeTargets="_GetPackageFiles">
        <WriteLinesToFile File="$(IntermediateOutputPath)VERSION" Lines="$(Version)" Overwrite="true" WriteOnlyWhenDifferent="true" />
        <ItemGroup>
            <_PackageFiles Include="$(IntermediateOutputPath)VERSION" PackagePath="." />
        </ItemGroup>
    </Target>

</Project>
