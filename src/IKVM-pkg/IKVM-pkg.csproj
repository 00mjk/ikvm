<Project Sdk="Microsoft.Build.NoTargets/3.5.0">

    <PropertyGroup>
        <PackageId>IKVM</PackageId>
        <TargetFrameworks>net461;netcoreapp3.1</TargetFrameworks>
        <IncludeBuildOutput>true</IncludeBuildOutput>
        <TargetsForTfmSpecificContentInPackage>$(TargetsForTfmSpecificContentInPackage);CopyProjectReferencesToPackage</TargetsForTfmSpecificContentInPackage>
        <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <Description>Java SE 8 Virtual Machine for .NET</Description>
        <GenerateDocumentationFile>false</GenerateDocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\IKVM.Java\IKVM.Java.csproj">
            <ReferenceOutputAssembly>True</ReferenceOutputAssembly>
            <PrivateAssets>all</PrivateAssets>
        </ProjectReference>
        <ProjectReference Include="..\IKVM.Reflection\IKVM.Reflection.csproj">
            <ReferenceOutputAssembly>True</ReferenceOutputAssembly>
            <PrivateAssets>all</PrivateAssets>
        </ProjectReference>
        <ProjectReference Include="..\IKVM.Runtime\IKVM.Runtime.csproj">
            <ReferenceOutputAssembly>True</ReferenceOutputAssembly>
            <PrivateAssets>all</PrivateAssets>
        </ProjectReference>
        <ProjectReference Include="..\IKVM.Runtime.JNI\IKVM.Runtime.JNI.csproj">
            <ReferenceOutputAssembly>True</ReferenceOutputAssembly>
            <PrivateAssets>all</PrivateAssets>
        </ProjectReference>
    </ItemGroup>

    <ItemGroup>
        <LibProjectReference Include="ikvm-native-win-x64">
            <ProjectFile>..\ikvm-native\ikvm-native-win.vcxproj</ProjectFile>
            <Platform>x64</Platform>
            <Configuration>$(Configuration)</Configuration>
            <OutputDir>runtimes\win-x64\native</OutputDir>
        </LibProjectReference>
        <LibProjectReference Include="ikvm-native-win-x86">
            <ProjectFile>..\ikvm-native\ikvm-native-win.vcxproj</ProjectFile>
            <Platform>Win32</Platform>
            <Configuration>$(Configuration)</Configuration>
            <OutputDir>runtimes\win-x86\native</OutputDir>
        </LibProjectReference>
        <LibProjectReference Include="ikvm-native-linux-x64">
            <ProjectFile>..\ikvm-native\ikvm-native-linux.vcxproj</ProjectFile>
            <Platform>x64</Platform>
            <Configuration>$(Configuration)</Configuration>
            <OutputDir>runtimes\linux-x64\native</OutputDir>
        </LibProjectReference>
    </ItemGroup>

    <ItemGroup Condition=" '$(TargetFramework)' == '' ">
        <PublishProjectReference Include="..\IKVM.MSBuild.Tasks\IKVM.MSBuild.Tasks.csproj" Condition=" '$(TargetFramework)' == '' ">
            <SetTargetFramework>TargetFramework=net472</SetTargetFramework>
            <PublishPackagePath>tasks\net472</PublishPackagePath>
            <PublishProperties>SelfContained=false</PublishProperties>
        </PublishProjectReference>
        <PublishProjectReference Include="..\IKVM.MSBuild.Tasks\IKVM.MSBuild.Tasks.csproj" Condition=" '$(TargetFramework)' == '' ">
            <SetTargetFramework>TargetFramework=netcoreapp3.1</SetTargetFramework>
            <PublishPackagePath>tasks\netcoreapp3.1</PublishPackagePath>
            <PublishProperties>SelfContained=false</PublishProperties>
        </PublishProjectReference>
    </ItemGroup>

    <ItemGroup Condition=" '$(TargetFramework)' == '' ">
        <PublishProjectReference Include="..\ikvm\ikvm.csproj" Condition=" '$(TargetFramework)' == '' ">
            <SetTargetFramework>TargetFramework=net461</SetTargetFramework>
            <PublishPackagePath>tools\net461\any</PublishPackagePath>
            <PublishProperties>SelfContained=false</PublishProperties>
        </PublishProjectReference>
        <PublishProjectReference Include="..\ikvmc\ikvmc.csproj" Condition=" '$(TargetFramework)' == '' ">
            <SetTargetFramework>TargetFramework=net461</SetTargetFramework>
            <PublishPackagePath>tools\net461\any</PublishPackagePath>
            <PublishProperties>SelfContained=false</PublishProperties>
        </PublishProjectReference>
        <PublishProjectReference Include="..\ikvmstub\ikvmstub.csproj" Condition=" '$(TargetFramework)' == '' ">
            <SetTargetFramework>TargetFramework=net461</SetTargetFramework>
            <PublishPackagePath>tools\net461\any</PublishPackagePath>
            <PublishProperties>SelfContained=false</PublishProperties>
        </PublishProjectReference>

        <PublishProjectReference Include="..\ikvm\ikvm.csproj" Condition=" '$(TargetFramework)' == '' ">
            <SetTargetFramework>TargetFramework=netcoreapp3.1</SetTargetFramework>
            <PublishPackagePath>tools\netcoreapp3.1\win7-x86</PublishPackagePath>
            <PublishProperties>SelfContained=false;RuntimeIdentifier=win7-x86</PublishProperties>
        </PublishProjectReference>
        <PublishProjectReference Include="..\ikvmc\ikvmc.csproj" Condition=" '$(TargetFramework)' == '' ">
            <SetTargetFramework>TargetFramework=netcoreapp3.1</SetTargetFramework>
            <PublishPackagePath>tools\netcoreapp3.1\win7-x86</PublishPackagePath>
            <PublishProperties>SelfContained=false;RuntimeIdentifier=win7-x86</PublishProperties>
        </PublishProjectReference>
        <PublishProjectReference Include="..\ikvmstub\ikvmstub.csproj" Condition=" '$(TargetFramework)' == '' ">
            <SetTargetFramework>TargetFramework=netcoreapp3.1</SetTargetFramework>
            <PublishPackagePath>tools\netcoreapp3.1\win7-x86</PublishPackagePath>
            <PublishProperties>SelfContained=false;RuntimeIdentifier=win7-x86</PublishProperties>
        </PublishProjectReference>

        <PublishProjectReference Include="..\ikvm\ikvm.csproj" Condition=" '$(TargetFramework)' == '' ">
            <SetTargetFramework>TargetFramework=netcoreapp3.1</SetTargetFramework>
            <PublishPackagePath>tools\netcoreapp3.1\win7-x64</PublishPackagePath>
            <PublishProperties>SelfContained=false;RuntimeIdentifier=win7-x64</PublishProperties>
        </PublishProjectReference>
        <PublishProjectReference Include="..\ikvmc\ikvmc.csproj" Condition=" '$(TargetFramework)' == '' ">
            <SetTargetFramework>TargetFramework=netcoreapp3.1</SetTargetFramework>
            <PublishPackagePath>tools\netcoreapp3.1\win7-x64</PublishPackagePath>
            <PublishProperties>SelfContained=false;RuntimeIdentifier=win7-x64</PublishProperties>
        </PublishProjectReference>
        <PublishProjectReference Include="..\ikvmstub\ikvmstub.csproj" Condition=" '$(TargetFramework)' == '' ">
            <SetTargetFramework>TargetFramework=netcoreapp3.1</SetTargetFramework>
            <PublishPackagePath>tools\netcoreapp3.1\win7-x64</PublishPackagePath>
            <PublishProperties>SelfContained=false;RuntimeIdentifier=win7-x64</PublishProperties>
        </PublishProjectReference>

        <PublishProjectReference Include="..\ikvm\ikvm.csproj" Condition=" '$(TargetFramework)' == '' ">
            <SetTargetFramework>TargetFramework=netcoreapp3.1</SetTargetFramework>
            <PublishPackagePath>tools\netcoreapp3.1\linux-x64</PublishPackagePath>
            <PublishProperties>SelfContained=false;RuntimeIdentifier=linux-x64</PublishProperties>
        </PublishProjectReference>
        <PublishProjectReference Include="..\ikvmc\ikvmc.csproj" Condition=" '$(TargetFramework)' == '' ">
            <SetTargetFramework>TargetFramework=netcoreapp3.1</SetTargetFramework>
            <PublishPackagePath>tools\netcoreapp3.1\linux-x64</PublishPackagePath>
            <PublishProperties>SelfContained=false;RuntimeIdentifier=linux-x64</PublishProperties>
        </PublishProjectReference>
        <PublishProjectReference Include="..\ikvmstub\ikvmstub.csproj" Condition=" '$(TargetFramework)' == '' ">
            <SetTargetFramework>TargetFramework=netcoreapp3.1</SetTargetFramework>
            <PublishPackagePath>tools\netcoreapp3.1\linux-x64</PublishPackagePath>
            <PublishProperties>SelfContained=false;RuntimeIdentifier=linux-x64</PublishProperties>
        </PublishProjectReference>
    </ItemGroup>

    <ItemGroup>
        <None Include="build\**\*" Pack="true" PackagePath="build\%(RecursiveDir)%(Filename)%(Extension)" />
        <None Include="buildTransitive\**\*" Pack="true" PackagePath="buildTransitive\%(RecursiveDir)%(Filename)%(Extension)" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\..\LICENSE.md" Pack="true" PackagePath="." />
        <None Include="..\..\README.md" Pack="true" PackagePath="." />
    </ItemGroup>

    <Target Name="CopyProjectReferencesToPackage" DependsOnTargets="ResolveReferences">
        <ItemGroup>
            <TfmSpecificPackageFile Include="@(ReferenceCopyLocalPaths-&gt;WithMetadataValue('ReferenceSourceTarget', 'ProjectReference')-&gt;WithMetadataValue('PrivateAssets', 'all'))" PackagePath="lib\$(TargetFramework)" />
        </ItemGroup>
    </Target>

    <Target Name="MakeIkvmVersionFile" Outputs="$(IntermediateOutputPath)VERSION" BeforeTargets="_GetPackageFiles">
        <WriteLinesToFile File="$(IntermediateOutputPath)VERSION" Lines="$(Version)" Overwrite="true" WriteOnlyWhenDifferent="true" />
        <ItemGroup>
            <_PackageFiles Include="$(IntermediateOutputPath)VERSION" PackagePath="." />
        </ItemGroup>
    </Target>

</Project>
