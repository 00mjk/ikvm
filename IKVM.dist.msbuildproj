            <Properties>TargetFramework=netcoreapp3.1;RuntimeIdentifier=win7-x86;PublishDir=$(DistDir)\tools\ikvmc\netcoreapp3.1\win7-x86</Properties>
        </TargetsForPublish>
        <TargetsForPublish Include="$(SolutionFile)">
            <Targets>ikvmc:Publish</Targets>
            <Properties>TargetFramework=netcoreapp3.1;RuntimeIdentifier=linux-x64;PublishDir=$(DistDir)\tools\ikvmc\netcoreapp3.1\linux-x64</Properties>
        </TargetsForPublish>

        <TargetsForPublish Include="$(SolutionFile)">
            <Targets>ikvmstub:Publish</Targets>
            <Properties>TargetFramework=net461;RuntimeIdentifier=win7-x64;PublishDir=$(DistDir)\tools\ikvmstub\net461\win7-x86</Properties>
        </TargetsForPublish>
        <TargetsForPublish Include="$(SolutionFile)">
