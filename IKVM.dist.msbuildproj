        </TargetsForPublish>

        <TargetsForPublish Include="$(SolutionFile)">
            <Targets>IKVM_Tools_Tests:Publish</Targets>
            <Properties>TargetFramework=net461;PublishDir=$(DistDir)\tests\IKVM.Tools.Tests\net461</Properties>
        </TargetsForPublish>
        <TargetsForPublish Include="$(SolutionFile)">
            <Targets>IKVM_Tools_Tests:Publish</Targets>
            <Properties>TargetFramework=net48;PublishDir=$(DistDir)\tests\IKVM.Tools.Tests\net48</Properties>
        </TargetsForPublish>
        <TargetsForPublish Include="$(SolutionFile)">
            <Targets>IKVM_Tools_Tests:Publish</Targets>
            <Properties>TargetFramework=netcoreapp3.1;PublishDir=$(DistDir)\tests\IKVM.Tools.Tests\netcoreapp3.1</Properties>
        </TargetsForPublish>
